<div class="pagination">
  <% for(let i = 1 ; i <= pages ; i++) { %>
    <a class="btn btn-danger" href="/users?page=<%= i; %>"><%= i; %></a>
  <% } %>
</div>


<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Id</th>
      <th>Image</th>
      <th>Nickname</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>

    <% data.forEach(user => { %>
      <tr>
        <td><%= user.id %></td>
        <td><img src="<%= user.image %>" width="50px" alt=""></td>
        <td><%= user.nickname %></td>
        <td class="small"><%= user.description %></td>
        <td>
          <a href="/cart/add/<%= user.id %>" class="btn btn-success">AdD tO cArT</a>
          <a href="/users/edit/<%= user.id %>" class="btn btn-warning">Edit</a>
          <a href="/users/delete/<%= user.id %>" class="btn btn-danger">Delete</a>
        </td>
      </tr>
    <% }); %>
    
  </tbody>
</table>



